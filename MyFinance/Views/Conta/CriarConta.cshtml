@model ContaModel

<h3>Criar Conta</h3>

<form asp-controller="Conta" asp-action="CriarConta">
    <div class="form-group">
        <label>Nome:</label>
        <input type="text" class="form-control" asp-for="Nome" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label >Saldo:</label>
        <input type="number" min="1" step="any" class="form-control" asp-for="Saldo" />
        <span asp-validation-for="Saldo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-block btn-success">Cadastrar</button>
</form>