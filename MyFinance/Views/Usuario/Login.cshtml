@model UsuarioModel

@{

    Layout = "../Shared/_LayoutLogin.cshtml";

}

<div class="container" style="background-color:rgba(239,239,239,0.95); border-radius: 10px; padding: 20px; width:300px; margin:0 auto;">

    @{
        if (!string.IsNullOrEmpty(TempData["MessagemLoginInvalido"]?.ToString()))
        {
            <div class="alert alert-danger">
                <strong>Atenção!</strong> @TempData["MessagemLoginInvalido"]
            </div>
        }
    }

    <form asp-controller="Usuario" asp-action="ValidarLogin">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" asp-for="Email">
        </div>
        <div class="form-group">
            <label for="pwd">Senha:</label>
            <input type="password" class="form-control" asp-for="Senha">
        </div>
        <div class="checkbox">
            <label><input type="checkbox"> Lembrar meu acesso</label>
        </div>
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Registrar", "Usuario")'">Registrar</button>
        <button type="submit" class="btn btn-default">Entrar</button>
    </form>
</div>